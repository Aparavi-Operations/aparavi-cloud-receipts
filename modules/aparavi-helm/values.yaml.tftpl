mysql:
  enabled: false
externalMysql:
  hostname: ${mysqlHostname}
  port: ${mysqlPort}
aggregator:
  config:
    mysql:
      username: ${mysqlUsername}
      password: ${format("%q", mysqlPassword)}
    platform:
      host: ${platformHost}
      nodeId: ${platformNodeId}
    nodeName: ${aggregatorNodeName}
collector:
  config:
    nodeName: ${collectorNodeName}
  %{~ if claimName != null ~}
  nodeSelector:
    ${collectorNodeSelector}
  extraVolumes:
    - name: data
      persistentVolumeClaim:
        claimName: ${claimName}
  extraVolumeMounts:
    - name: data
      mountPath: /opt/data
  %{~ endif ~}
